@{
    ViewData["Title"] = "Home Page";
}

@model List<BlobFile>

<div class="text-center">
    <h1 class="display-4">Azure Blob Storage anon file access demo</h1>
    <p>Demo of how to access anonmous blob storage account files titles and URLs, and return them via API endpoint and show them in a view.</p>
</div>

@if (Model.Count > 0)
{
    <div class="container">
        <div class="row">
            @foreach (var blob in Model)
            {
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@blob.Title</h5>
                            <a target="_blank" href="@blob.URL" class="btn btn-primary">Go to file</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}